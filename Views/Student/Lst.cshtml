@model List<Student>
@{
    Layout = "layout2";
}


    <div class="container mt-5">
        <!-- Centering the action buttons -->
        <div class="text-center mb-4">
            <a href="/student/Create" class="btn btn-dark">Create Student</a>
        </div>

        <!-- Centering the table -->
        <div class="table-responsive">
            <table class="table table-hover table-bordered text-center">
                <thead class="thead-dark">
                    <tr>
                        <th>StdID</th>
                        <th>StdName</th>
                        <th>StdAge</th>
                        <th>StdEmail</th>
                        <th>DeptName</th>
                        <th>Operation</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="6" class="text-center">NO Students</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Std_Id</td>
                                <td>@item.Std_Name</td>
                                <td>@item.Age</td>
                                <td>@item.Std_Email</td>
                                <td>@item.Department.Dept_Name</td>
                                <td>
                                    <a asp-controller="Student" asp-action="Read" asp-route-stdid="@item.Std_Id" class="btn btn-info">Read</a>
                                    <a asp-controller="Student" asp-action="update" asp-route-stdid="@item.Std_Id" class="btn btn-info">Update</a>
                                    <a asp-controller="Student" asp-action="delete" asp-route-stdid="@item.Std_Id" class="btn btn-danger" onclick="return confirm('are you sure')">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>


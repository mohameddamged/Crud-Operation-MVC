@model List<Course>
@{
    Layout = "layout2";
}


<div class="container mt-5">
    <!-- Centering the action buttons -->
    <div class="text-center mb-4">
        <a href="/course/Create" class="btn btn-dark mx-2">Create Course</a>
    </div>

    <!-- Centering the table -->
    <div class="table-responsive">
        <table class="table table-hover table-bordered text-center">
            <thead class="thead-dark">
                <tr>
                    <th>course Id</th>
                    <th>Course Name</th>
                    <th>course Duration</th>
                    <th>DeptId</th>
                    <th>Operation</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="5" class="text-center">NO Courses</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Course_Id</td>
                            <td>@item.Course_Name</td>
                            <td>@item.Course_duration</td>
                            <td>@item.Dept_Id</td>
                            <td>
                                <a asp-controller="course" asp-action="Read" asp-route-CruId="@item.Course_Id" class="btn btn-info">Read</a>
                                <a asp-controller="course" asp-action="update" asp-route-CruId="@item.Course_Id" class="btn btn-info">Update</a>
                                <a asp-controller="course" asp-action="delete" asp-route-CruId="@item.Course_Id" class="btn btn-danger" onclick="return confirm('are you sure')">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>